                        audio.pause()
                    }

                }
            }
            // Mettre Ã  jour la barre de progression et le temps de lecture toutes les 500 millisecondes
            setInterval(updateProgress, 500);

            // DÃ©placer la barre de progression au clic sur progress-wrapper si une chanson est sÃ©lectionnÃ©e
            progressWrapper.on('click', function (e) {

                if (isSongSelected() && !isNaN(duration)) {
                    var pos = (e.pageX - $(this).offset().left) / $(this).width();
                    audio.currentTime = pos * duration;
                    updateProgress();
                }
            });
            // VÃ©rifier si une chanson est sÃ©lectionnÃ©e
            function isSongSelected() {
                return $('source').src !== "";
            }
            function ajax(id,bool) {
                console.log(id)
                console.log(bool)
                $.ajax({
                    url: '{{ path('app_ajax_sound') }}',
                    type: 'POST',
                    data: {
                        id: id,
                        checked: bool
                    },
                    success: function(response) {
                        // RÃ©ponse du contrÃ´leur Symfony
                        console.log(response);
                    },
                    error: function(xhr, status, error) {
                        // Gestion des erreurs
                        console.error(error);
                    }
                });
            }
        })

    </script>
{% endblock %}



