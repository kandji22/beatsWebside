    ></script>
    <script>
        $(function(){
            var progressBar = $('.progress-bar');
            var audioPlayer;
            var progressWrapper = $('.progress-wrapper');
            let toggle = document.querySelector(".toggle");
            let body = document.querySelector("body");

            let tl = gsap.timeline();

            toggle.addEventListener("click", function () {
                if (body.classList.contains("open")) {
                    //Fermer le menu.
                    body.classList.remove("open");
                    tl.to(".sep", {
                        duration: 0,
                        height: 0,
                    });

                    tl.to(".sep__icon", {
                        duration: 0,
                        opacity: 0,
                    });
                } else {
                    //Ouvrir le menu.
                    body.classList.add("open");

                    tl.to(".sep", {
                        duration: 0.75,
                        height: "100%",
                        delay: 0.5,
                    });

                    tl.to(".sep__icon", {
                        opacity: 1,
                        duration: 0.25,
                        delay: -0.5,
                    });

                    tl.from(
                        ".menu__left__inner__item",
                        {
                            y: 40,
                            opacity: 0,
                            stagger: 0.25,
                        },
                        "<-0.5"
                    );

                    tl.from(
                        ".menu__right__inner__item",
                        {
                            y: 40,
                            opacity: 0,
                            stagger: 0.25,
                        },
                        "<0.5"
                    );
                }
            });


            var audio = document.getElementById('audio');
            var playpause = document.getElementById("play");
            var duration;
            var tabSound = {}
            var indexSound = 1
            $('.song').each(function(){
                tabSound[$(this).data('piste')] = $(this).data('song')
            })
            $.each(tabSound,function (key,val){
                if(val == undefined) {
                    tabSound.splice(key,1)
                }
            })

            function togglePlayPause() {
                if (audio.paused || audio.ended) {
                    playpause.title = "Pause";
                    audio.play();
                } else {
                    playpause.title = "Play";
                    audio.pause();
                }
            }
            $('#magicButton').on('click',function (){
                $('.panier_show').toggle();
                $('.info').toggle()
            })
            $('#play').on('click',function() {
                togglePlayPause()
            })
            $('.song').on('click',function(e){
                //label_heart
                console.log(e.target.classList)
                if($.inArray('label_heart',e.target.classList) !== -1) {
                    var element = $(this).find('.heart')
                    //$(this).find('.heart').prop('checked',true)
                    if(element.is(':checked')) {
                        ajax($(this).data('id'),false);
                        $(this).find('.heart').prop('checked',false)
                        return
                    }
                    else {
                        ajax($(this).data('id'),true);
                        $(this).find('.heart').prop('checked',true)
                        return
                    }



                }
                $(".song").removeClass("active");
                $(this).addClass("active");
                progressBar.width(0 + '%');
                $('.song_'+indexSound).removeClass('active')
                indexSound = $(this).data('piste')
                goTo(tabSound[indexSound])
            })
            $('.panier_show').on('click',function () {
                $(this).hide('slow')
                $('.show_card').show('slow')
            })
        $('#forward').on('click',function () {
            $('.song_'+indexSound).removeClass('active')
            indexSound++
            if(tabSound.hasOwnProperty(indexSound)) {
                goTo(tabSound[indexSound])
            }
            else {
                indexSound--
            }
        })
        $('#backward').on('click',function () {
            $('.song_'+indexSound).removeClass('active')
            indexSound--
            if(tabSound.hasOwnProperty(indexSound)) {
                goTo(tabSound[indexSound])
            }
            else {
                indexSound++
            }
        })

            function goTo(piste = null) {
                $('.song_'+indexSound).addClass('active')
                $("#audio source").prop("src", piste);
                $("#audio")[0].load();
                $("#audio")[0].play();

                $('#play').prop('checked',true)
            }
            $('#magicButton').on('click',function(){
                $('.music-player').toggle()
            })

            // Mise Ã  jour de la barre de progression et du temps de lecture
            function updateProgress() {
                currentTime = audio.currentTime;
                duration = audio.duration;
                if (!isNaN(duration)) {
                    var percent = currentTime / duration * 100;
                    progressBar.width(percent + '%');
                }
                if(currentTime == duration) {
                    $('.song_'+indexSound).removeClass('active')
                    indexSound++
                    pause()
                    if( tabSound.hasOwnProperty(indexSound)) {
                        goTo(tabSound[indexSound])
                    }
